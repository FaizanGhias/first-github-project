<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/profileImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_launcher_background" />


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profileImg"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/profileImg"
            android:background="@drawable/bkg"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Muhammad Yasir khan"
            android:textColor="#F4BF00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/profileImg"
            android:layout_gravity="end"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/name"
            android:background="@drawable/bkg"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:text="Male"
            android:textColor="#F4BF00"
            android:textSize="15sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/layout"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bkg"
        android:gravity="center_vertical"
        android:paddingStart="15dp"
        android:text="MuhammadYasir@gmail.com"
        android:textColor="#F4BF00"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/layoutt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bkg"
            android:gravity="center"
            android:paddingHorizontal="48dp"
            android:text="24 Years "
            android:textColor="#F4BF00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/coins"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bkg"
            android:gravity="center"
            android:paddingHorizontal="28dp"
            android:text="100 Coins"
            android:textColor="#F4BF00"
            android:textSize="15sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/mobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutt"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mobileName"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bkg"
            android:gravity="center"
            android:paddingHorizontal="48dp"
            android:text="Samsung"
            android:textColor="#F4BF00"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/screenSize"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bkg"
            android:gravity="center"
            android:paddingHorizontal="28dp"
            android:text="1080 X 1800"
            android:textColor="#F4BF00"
            android:textSize="15sp" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/bkg"
        android:paddingHorizontal="40dp"
        android:text="Logout"
        android:textColor="#F4BF00" />


</RelativeLayout>